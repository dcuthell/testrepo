{
  "parser": "babel-eslint",
  "extends": [
    "react-app",
    "standard-react",
    "standard"
  ],
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,

    // allow specifying true explicitly for boolean props
    "react/jsx-boolean-value": 0,

    "no-tabs": 0
  }
}
